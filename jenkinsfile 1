pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Checkout'
            }
        }
        stage('Build') {
            steps {
                echo 'Clean Build'
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                sh 'mvn test'
            }
        }
        stage('JaCoCo') {
            steps {
                echo 'Code Coverage'
                jacoco()
            }
        }
        stage('Package') {
            steps {
                echo 'Packaging'
                sh 'mvn package '
            }
        }
        stage('Deploy') {
            steps {
                sh '/opt/apache-tomcat-7.0.91/webapps'
            }
        }
    }
